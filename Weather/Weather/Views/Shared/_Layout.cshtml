<!DOCTYPE html>
<html ng-app="weatherApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
            @Scripts.Render("~/bundles/modernizr")
            <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
        <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link href="~/Content/animate.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Weather Information", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - <a href="https://au.linkedin.com/in/rahman-mahmoodi-a973a05" target="_blank">Developed By Rahman Mahmoodi</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- TODO: use bundling and minifications -->
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
<script src="~/app/Config.js"></script>
    <script src="~/app/Common/loadingInfoIndicator.js"></script>
    <script src="~/app/Common/NotificationService.js"></script>
    <script src="~/app/Cities/CitiesService.js"></script>
    <script src="~/app/Countries/CountriesController.js"></script>
    <script src="~/app/Cities/CitiesController.js"></script>

@RenderSection("scripts", required: false)
</body>
</html>
